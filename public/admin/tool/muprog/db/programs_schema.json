{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Programs",
  "description": "This schema describes the export and upload format of programs",
  "type": "object",
  "properties": {
    "programs": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "idnumber": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            },
            "fullname": {
              "type": "string",
              "minLength": 1,
              "maxLength": 254
            },
            "category": {
              "type": "string",
              "minLength": 0
            },
            "description": {
              "type": "string",
              "minLength": 0
            },
            "descriptionformat": {
              "enum": [0, 1, 2, 3, 4]
            },
            "publicaccess": {
              "enum": [0, 1]
            },
            "creategroups": {
              "enum": [0, 1]
            },
            "allocationstart": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "allocationend": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "startdate": {
              "anyOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["allocation"]
                    }
                  },
                  "required": ["type"]
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["date"]
                    },
                    "date": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": ["type", "date"]
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["delay"]
                    },
                    "delay": {
                      "type": "string",
                      "pattern": "^(P[1-9][0-9]*M|P[1-9][0-9]*D|PT[1-9][0-9]*H)$"
                    }
                  },
                  "required": ["type", "delay"]
                }
              ]
            },
            "duedate": {
              "anyOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["notset"]
                    }
                  },
                  "required": ["type"]
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["date"]
                    },
                    "date": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": ["type", "date"]
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["delay"]
                    },
                    "delay": {
                      "type": "string",
                      "pattern": "^(P[1-9][0-9]*M|P[1-9][0-9]*D|PT[1-9][0-9]*H)$"
                    }
                  },
                  "required": ["type", "delay"]
                }
              ]
            },
            "enddate": {
              "anyOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["notset"]
                    }
                  },
                  "required": ["type"]
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["date"]
                    },
                    "date": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": ["type", "date"]
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "enum": ["delay"]
                    },
                    "delay": {
                      "type": "string",
                      "pattern": "^(P[1-9][0-9]*M|P[1-9][0-9]*D|PT[1-9][0-9]*H)$"
                    }
                  },
                  "required": ["type", "delay"]
                }
              ]
            },
            "contents": {
              "type": "object",
              "properties": {
                "itemtype": {
                  "enum": ["set"]
                },
                "completiondelay": {
                  "type": "integer",
                  "minimum": 0
                },
                "sequencetype": {
                  "enum": ["allinanyorder", "allinorder", "atleast", "minpoints"]
                },
                "minprerequisites": {
                  "type": "integer",
                  "minimum": 1
                },
                "minpoints": {
                  "type": "integer",
                  "minimum": 1
                },
                "items": {
                  "type": "array",
                  "items": [
                    {
                      "anyOf": [
                        {
                          "type": "object",
                          "properties": {
                            "itemtype": {
                              "enum": ["course"]
                            },
                            "reference": {
                              "type": "string",
                              "minLength": 1
                            },
                            "points": {
                              "type": "integer",
                              "minimum": 0
                            },
                            "completiondelay": {
                              "type": "integer",
                              "minimum": 0
                            }
                          },
                          "required": ["itemtype", "reference"]
                        },
                        {
                          "type": "object",
                          "properties": {
                            "itemtype": {
                              "enum": ["training"]
                            },
                            "reference": {
                              "type": "string",
                              "minLength": 1
                            },
                            "points": {
                              "type": "integer",
                              "minimum": 0
                            },
                            "completiondelay": {
                              "type": "integer",
                              "minimum": 0
                            }
                          },
                          "required": ["itemtype", "reference"]
                        },
                        {
                          "type": "object",
                          "properties": {
                            "itemtype": {
                              "enum": ["set"]
                            },
                            "setname": {
                              "type": "string",
                              "minLength": 1
                            },
                            "points": {
                              "type": "integer",
                              "minimum": 0
                            },
                            "completiondelay": {
                              "type": "integer",
                              "minimum": 0
                            },
                            "sequencetype": {
                              "enum": ["allinanyorder", "allinorder", "atleast", "minpoints"]
                            },
                            "minprerequisites": {
                              "type": "integer",
                              "minimum": 1
                            },
                            "minpoints": {
                              "type": "integer",
                              "minimum": 1
                            }
                          },
                          "required": [
                            "itemtype", "setname", "sequencetype"
                          ]
                        }
                      ]
                    }
                  ]
                }
              },
              "required": ["itemtype"]
            },
            "sources": {
              "type": "array",
              "items": [
                {
                  "anyOf": [
                    {
                      "type": "object",
                      "properties": {
                        "sourcetype": {
                          "enum": ["manual"]
                        }
                      },
                      "required": ["sourcetype"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "sourcetype": {
                          "enum": ["selfallocation"]
                        },
                        "data": {
                          "type": "object",
                          "properties": {
                            "allowsignup": {
                              "enum": [0, 1]
                            },
                            "maxusers": {
                              "type": ["integer", "null"],
                              "minimum": 1
                            },
                            "key": {
                              "type": ["integer", "integer", "null"],
                              "minLength": 1
                            }
                          }
                        }
                      },
                      "required": ["sourcetype"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "sourcetype": {
                          "enum": ["approval"]
                        },
                        "data": {
                          "type": "object",
                          "properties": {
                            "allowrequest": {
                              "enum": [0, 1]
                            }
                          }
                        }
                      },
                      "required": ["sourcetype"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "sourcetype": {
                          "enum": ["certify"]
                        }
                      },
                      "required": ["sourcetype"]
                    }
                  ]
                }
              ]
            }
          },
          "required": [
            "idnumber",
            "fullname"
          ]
        }
      ]
    }
  },
  "patternProperties": {
    "^customfield_": {
      "type": ["string", "integer", "number", "null"]
    }
  },
  "required": ["programs"]
}