{{!
    @template tool_mulib/dropdown

    Simple dropdown with actions.

    Example context (json):
    {
        "title": "Actions",
        "items": [
            { "divider": true },
            { "url": "https://example.com/something.php", "label": "Something" },
            { "customhtml": "<a class=\"dropdown-item\" href=\"https://example.com/other.php\">Other link</a>" }
        ]
    }
}}
<div class="btn-group">
    <button class="btn btn-icon mx-2"
            type="button"
            data-bs-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
            title="{{title}}"
    >
        <i class="icon fa fa-ellipsis-v fa-fw m-0" aria-hidden="true"></i>
    </button>
    <div class="dropdown-menu dropdown-menu-end">
        {{#items}}
            {{#divider}}
                <div class="dropdown-divider"></div>
            {{/divider}}
            {{#url}}
                <a class="dropdown-item {{class}}" href="{{url}}">{{{icon}}}{{label}}</a>
            {{/url}}
            {{#customhtml}}
                {{{.}}}
            {{/customhtml}}
        {{/items}}
    </div>
</div>
