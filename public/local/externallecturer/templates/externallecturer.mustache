<!-- Lecturer Table -->
<div id="lecturers-container" class="tab-content">
    <button id="add-lecturer" class="btn btn-primary uniform-button">{{str.addlecturerbutton}}</button>
    <button id="add-resident-lecturer" class="btn btn-primary uniform-button">{{str.addresidentlecturerbutton}}</button>
    <br>
    <button class="export-csv btn btn-outline-info">{{str.exportcsv}} <i class="fas fa-download"></i></button>

    <table class="custom-table">
        <thead>
            <tr>
                <th>{{str.name}}</th>
                <th>{{str.age}}</th>
                <th>{{str.specialization}}</th>
                <th>{{str.organization}}</th>
                <th>{{str.degree}}</th>
                <th>{{str.passport}}</th>
                <th>{{str.nationality}}</th>
                <th>{{str.coursescount}}</th>
                <th>{{str.createdby}}</th>
                <th>{{str.modifieddatetime}}</th>
                <th>{{str.actions}}</th>
            </tr>
        </thead>
        <tbody>
            {{#lecturers}}
            <tr class="lecturer-row" data-name={{name}}>
                <td>{{name}}</td>
                <td>{{age}}</td>
                <td>{{specialization}}</td>
                <td>{{organization}}</td>
                <td>{{degree}}</td>
                <td>{{passport}}</td>
                <td>{{nationality}}</td>
                <td>{{courses_count}}</td>
                <td>{{created_by}}</td>
                <td>{{modified_datetime}}</td>
                <td class="actions">
                    <!-- Edit Button -->
                    <button class="edit-lecturer-button {{#courses_count}}disabled{{/courses_count}}" {{#courses_count}}disabled{{/courses_count}} data-id="{{id}}" data-name="{{name}}" data-age="{{age}}" data-specialization="{{specialization}}" data-organization="{{organization}}" data-degree="{{degree}}" data-passport="{{passport}}" data-civil-number="{{civil_number}}" data-nationality="{{nationality}}" data-lecturer-type="{{lecturer_type}}">
                        <i class="fas fa-edit"></i>
                    </button>
                    <!-- Delete Button -->
                    <button onclick="event.stopPropagation(); showModal('{{str.confirmation}}', '{{str.confirmdeletelecturer}}', () => deleteHandler('actions/deletelecturer.php', {id: {{id}}}))" class="delete-lecturer-button {{#courses_count}}disabled{{/courses_count}}" {{#courses_count}}disabled{{/courses_count}}>
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
            {{/lecturers}}
            {{^lecturers}}
            <tr><td colspan="11">{{str.nolecturers}}</td></tr>
            {{/lecturers}}
        </tbody>
    </table>
    
    <!-- Flex container for total rows, pagination, and per page form -->
    <div class="custom-table-controls">
        <div class="total-rows">
            <span class="alt-text">{{str.total}}</span> {{totallecturers}}
        </div>

        <!-- Pagination and per page form -->
        <div class="pagination-controls">
            <form method="get" id="perpage-form" class="perpage-form">
                <label for="perpage" class="alt-text">{{str.recordsperpage}}</label>
                <select class="custom-select" name="perpage" id="perpage" onchange="document.getElementById('perpage-form').submit();">
                    {{#perpage_options}}
                    <option value="{{value}}" {{#selected}}selected{{/selected}}>{{value}}</option>
                    {{/perpage_options}}
                </select>
            </form>

            <!-- Render pagination -->
            {{#lecturerspagination}}
            {{{lecturerspagination}}}
            {{/lecturerspagination}}
        </div>
    </div>
</div>



