<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/externallecturer/db" VERSION="2023100201" COMMENT="External Lecturer Management">
    <TABLES>
        <!-- Table for storing external lecturer details -->
        <TABLE NAME="externallecturer" COMMENT="Stores details of external lecturers">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="age" TYPE="int" LENGTH="3" NOTNULL="true"/>
                <FIELD NAME="specialization" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="organization" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="degree" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="passport" TYPE="char" LENGTH="20" NOTNULL="true" COMMENT="Passport/identifier (can be sourced from Oracle when available)"/>
                <FIELD NAME="civil_number" TYPE="char" LENGTH="20" NOTNULL="false" COMMENT="Civil number (sourced from Oracle DUNIA when available)"/>
				<FIELD NAME="lecturer_type" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="external_visitor" COMMENT="Type of lecturer: external_visitor or resident"/>
				<FIELD NAME="nationality" TYPE="char" LENGTH="100" NOTNULL="false" COMMENT="Lecturer nationality"/>
                <FIELD NAME="courses_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="The number of courses the lecturer is enrolled in"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Record creation time"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Record last modified time"/>
                <FIELD NAME="created_by" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User ID who created this record"/>
                <FIELD NAME="modified_by" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="User ID who last modified this record"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
